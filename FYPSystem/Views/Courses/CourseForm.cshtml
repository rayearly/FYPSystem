@using FYPSystem.Models
@model Course
@{
    ViewBag.Title = "CourseForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CourseForm</h2>

@using (Html.BeginForm("Save", "Courses"))
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(c => c.CourseCode)
        @Html.TextBoxFor(c => c.CourseCode, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.CourseCode)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Name)
    </div>

    @Html.HiddenFor(m => m.Id)

    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}